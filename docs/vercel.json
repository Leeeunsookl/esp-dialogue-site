{
  "builds": [
    {
      "src": "webapp.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb" // 필요에 따라 추가
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "webapp.py" // 현 상태를 유지하되, 작동 여부 확인 필요.
                          // 만약 오류 발생 시 "dest": "/$1"로 변경하고,
                          // webapp.py를 /api/index.py로 이동하는 구조를 권장합니다.
    },
    {
      "src": "/(.*\\.(?:html|css|js|json|png|jpg|gif|txt|xml|md|svg))",
      "dest": "/$1"
    },
    {
      "src": "/",
      "dest": "/index.html"
    }
    // SPA(Single Page Application)이라면 아래 라우트를 추가해야 할 수 있습니다.
    /*
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
    */
  ]
}
