{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,

  "builds": [
    {
      "src": "docs/webapp.py",
      "use": "@vercel/python"
    },
    {
      "src": "docs/*",
      "use": "@vercel/static"
    }
  ],

  "routes": [
    { "src": "/(collect|api/.*)", "dest": "docs/webapp.py" },
    { "src": "/(.*)", "dest": "docs/$1" }
  ],

  "redirects": [
    { "source": "/chat", "destination": "/", "permanent": true },
    { "source": "/backend/:path*", "destination": "https://espdialog.net", "permanent": false }
  ],

  "headers": [
    {
      "source": "/(.*).(html|js|css|json|md|pdf|png|jpg|jpeg|gif|svg|mp4|webm|mov)",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" },
        { "key": "Pragma", "value": "no-cache" },
        { "key": "Expires", "value": "0" }
      ]
    }
  ]
}
