{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,

  "builds": [
    {
      "src": "webapp.py",
      "use": "@vercel/python"
    }
  ],

  "routes": [
    { "src": "/api/(.*)", "dest": "/webapp.py" },
    { "src": "/collect", "dest": "/webapp.py" },
    { "src": "/answer", "dest": "/answer.html" },
    { "src": "/(.*)", "dest": "/$1" }
  ],

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
