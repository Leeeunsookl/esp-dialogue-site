{
  "builds": [
    {
      // Root Directory (docs/)를 기준으로 현재 폴더를 명확히 지정
      "src": "./webapp.py", 
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "webapp.py"
    },
    {
      "src": "/(.*\\.(?:html|css|js|json|png|jpg|gif|txt|xml|md|svg))",
      "dest": "/$1"
    },
    {
      "src": "/",
      "dest": "/index.html"
    }
  ]
}
