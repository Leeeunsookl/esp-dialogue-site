{
  "cleanUrls": true,
  "trailingSlash": false,

  "rewrites": [
    { "source": "/",           "destination": "/index.html" },
    { "source": "/policy",     "destination": "/policy.html" },
    { "source": "/guide",      "destination": "/guide.html" },
    { "source": "/entities",   "destination": "/entities.html" },
    { "source": "/signature",  "destination": "/signature.html" },
    { "source": "/structure",  "destination": "/structure.html" },
    { "source": "/blocked",    "destination": "/blocked.html" },
    { "source": "/whyflow",    "destination": "/whyflow.html" }
  ],

  "redirects": [
    { "source": "/chat", "destination": "/", "permanent": true },
    { "source": "/backend/:path*", "destination": "https://espdialog.net", "permanent": false }
  ],

  "headers": [
    {
      "source": "/(index|policy|guide|entities|signature|structure|blocked|whyflow).html",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" },
        { "key": "Pragma",        "value": "no-cache" },
        { "key": "Expires",       "value": "0" }
      ]
    },
    {
      "source": "/:all*.js",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" },
        { "key": "Pragma",        "value": "no-cache" },
        { "key": "Expires",       "value": "0" }
      ]
    },
    {
      "source": "/:all*.css",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" },
        { "key": "Pragma",        "value": "no-cache" },
        { "key": "Expires",       "value": "0" }
      ]
    }
  ]
}
