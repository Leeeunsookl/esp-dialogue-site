{
  "version": 2,
  "functions": {
    "api/handler.py": {
      "runtime": "python3.11" 
      // 최신 안정 버전인 python3.11로 업그레이드를 권장합니다.
    }
  },
  "routes": [
    // 1. /api/existence/reply 경로를 Python 함수로 라우팅
    // 사용자님이 JS에서 호출하는 경로가 /api/existence/reply 이므로, 이 경로를 handler.py로 연결해야 합니다.
    {
      "src": "/api/existence/reply",
      "dest": "api/handler.py"
    },
    // 2. 다른 모든 /api/* 호출도 혹시 모를 경우를 대비하여 Python 함수로 라우팅
    {
      "src": "/api/(.*)",
      "dest": "api/handler.py"
    },
    // 3. HTML, JS, CSS 등 정적 파일을 처리.
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
