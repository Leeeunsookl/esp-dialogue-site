{
  "cleanUrls": true,
  "trailingSlash": false,

  "rewrites": [
    { "source": "/",           "destination": "/index.html" },
    { "source": "/policy",     "destination": "/policy.html" },
    { "source": "/guide",      "destination": "/guide.html" },
    { "source": "/entities",   "destination": "/entities.html" }
  ],

  "redirects": [
    { "source": "/chat", "destination": "/", "permanent": true }
  ],
  {
  "redirects": [
    {
      "source": "/backend/:path*",
      "destination": "https://espdialog.net",
      "permanent": false
    }
  ]
}

  "headers": [
    {
      "source": "/(index|policy|guide|entities).html",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" },
        { "key": "Pragma",        "value": "no-cache" },
        { "key": "Expires",       "value": "0" }
      ]
    }
  ]
}
