{
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/policy",   "destination": "/policy.html" },
    { "source": "/entities", "destination": "/entities.html" },
    { "source": "/guide",    "destination": "/guide.html" },
    { "source": "/chat",     "destination": "/chat.html" },
    { "source": "/",         "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(index|policy|entities|guide|chat).html",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" },
        { "key": "Pragma",        "value": "no-cache" },
        { "key": "Expires",       "value": "0" }
      ]
    },
    {
      "source": "/(style\\.css|app\\.js)",
      "headers": [
        { "key": "Cache-Control", "value": "max-age=0, s-maxage=0, must-revalidate" }
      ]
    }
  ]
}
