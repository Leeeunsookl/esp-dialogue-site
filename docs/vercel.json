
{
  "cleanUrls": true,
  "routes": [
    { "src": "^/$", "dest": "/index.html" },
    { "src": "^/policy$", "dest": "/policy.html" },
    { "src": "^/entities$", "dest": "/entities.html" },
    { "src": "^/guide$", "dest": "/guide.html" },
    { "src": "^/chat$", "dest": "/chat.html" },
    { "src": "^/sitemap\\.xml$", "dest": "/sitemap.xml" },
    { "src": "^/robots\\.txt$", "dest": "/robots.txt" },
    { "src": "^(.*)$", "dest": "$1" }
  ],
  "headers": [
    {
      "source": "/(index.html|policy.html|entities.html|guide.html|chat.html)",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" },
        { "key": "Pragma", "value": "no-cache" },
        { "key": "Expires", "value": "0" }
      ]
    },
    {
      "source": "/(style\\.css|app\\.js)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
