{
  "rewrites": [
    { "source": "/scenarios/:path*", "destination": "/public/scenarios/:path*" },
    { "source": "/kb/:path*", "destination": "/public/kb/:path*" },
    { "source": "/policies/:path*", "destination": "/public/policies/:path*" },
    { "source": "/signature/:path*", "destination": "/public/signature/:path*" }
  ],
  "headers": [
    {
      "source": "/(index|chat)\\.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, max-age=0" }
      ]
    },
    {
      "source": "/(scenarios|kb|policies|signature)/.*",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=600, s-maxage=600, immutable" }
      ]
    }
  ]
}
