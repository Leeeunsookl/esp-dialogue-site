{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,

  "builds": [
    {
      "src": "docs/webapp.py",
      "use": "@vercel/python"
    },
    {
      "src": "docs/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "docs/*.css",
      "use": "@vercel/static"
    },
    {
      "src": "docs/*.js",
      "use": "@vercel/static"
    }
  ],

  "routes": [
    { "src": "/api/(.*)", "dest": "/docs/webapp.py" },
    { "src": "/collect", "dest": "/docs/webapp.py" },
    { "src": "/(.*)\\.html", "dest": "/docs/$1.html" },
    { "src": "/", "dest": "/docs/index.html" },
    { "src": "/(.*)", "dest": "/docs/$1" }
  ],

  "redirects": [
    { "source": "/chat", "destination": "/", "permanent": true }
  ],

  "headers": [
    {
      "source": "/(.*).html",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache" }
      ]
    },
    {
      "source": "/(.*).(js|css|png|jpg|jpeg|gif|svg)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
